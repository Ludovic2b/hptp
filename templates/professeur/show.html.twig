{% extends 'base.html.twig' %}

{% block title %}Professeur{% endblock %}

{% block body %}
    <h1>Professeur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ professeur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ professeur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ professeur.prenom }}</td>
            </tr>
            <tr>
                <th>Cours</th>
                <td>
                 <ul>
                {% for cour in professeur.cours %}
                    <li>{{cour.nom}}</li>
                    {% for eleve in cour.eleves %}
                    <ul>
                        <li>{{eleve.prenom}} {{eleve.nom}}</li>
                    </ul>
                    {% endfor %}
                {% endfor %}
                </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_professeur_index') }}">back to list</a>

    <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}">edit</a>

    {{ include('professeur/_delete_form.html.twig') }}
{% endblock %}
